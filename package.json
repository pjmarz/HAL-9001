{
  "name": "hal-9001-workspace",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "app/packages/*"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "npm-run-all -p dev:backend dev:frontend",
    "dev:backend": "npm --prefix app/packages/backend run start",
    "dev:frontend": "npm --prefix app/packages/frontend run start",
    "build": "npm-run-all build:frontend",
    "build:frontend": "npm --prefix app/packages/frontend run build",
    "start": "npm run dev"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
